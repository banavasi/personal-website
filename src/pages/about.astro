---
import MainLayout from '@/layouts/main.astro';
import { Badge } from '@/components/ui/badge';
import { Mail, Linkedin, Github, MapPin } from 'lucide-react';
import { getResumeData } from '@/lib/cms/content-service';
import { getYearsOfExperience } from '@/lib/utils';
import { DownloadPDFButton } from '@/components/DownloadPDFButton';

// Fetch content from CMS with fallback to static
const resumeData = await getResumeData();
const yearsOfExperience = getYearsOfExperience(2016);

const content = {
  title: 'Shashank Shandilya - Resume | Senior Technical Lead & Solutions Architect',
  description: `Senior Technical Lead with ${yearsOfExperience} experience in AI automation, cloud architecture, and full-stack development. Expertise in Python, TypeScript, AWS, Kubernetes, and leading high-performing engineering teams.`,
};

// Structured Data for SEO
const personSchema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: resumeData.personal.name,
  jobTitle: resumeData.personal.title,
  description: resumeData.personal.bio,
  url: 'https://shashankshandilya.com',
  sameAs: ['https://linkedin.com/in/shashankshandilya', 'https://github.com/banavasi'],
  address: {
    '@type': 'PostalAddress',
    addressLocality: 'Scottsdale',
    addressRegion: 'AZ',
    addressCountry: 'US',
  },
  knowsAbout: resumeData.keywords,
  alumniOf: {
    '@type': 'EducationalOrganization',
    name: 'Sri Jayachamarajendra College of Engineering (SJCE), Mysore',
  },
  hasCredential: {
    '@type': 'EducationalOccupationalCredential',
    credentialCategory: 'degree',
    name: 'Master of Computer Applications (MCA)',
    educationalLevel: "Master's Degree",
  },
};
---

<MainLayout content={content}>
  <!-- Structured Data / JSON-LD for SEO -->
  <script type="application/ld+json" set:html={JSON.stringify(personSchema)} />

  <!-- Sticky Download PDF Button - Fixed at 75% from top on right side -->
  <div class="fixed right-6 bottom-[25%] z-50">
    <DownloadPDFButton client:load />
  </div>

  <!-- Resume Container - Single Page Layout -->
  <div class="bg-concrete min-h-screen px-4 py-12 dark:bg-zinc-900 print:bg-white print:p-0">
    <div
      class="mx-auto max-w-5xl border-8 border-black bg-white shadow-[16px_16px_0px_0px_rgba(0,0,0,1)] dark:border-white dark:bg-black dark:shadow-[16px_16px_0px_0px_rgba(255,255,255,1)] print:max-w-none print:border-4 print:shadow-none"
    >
      <!-- Header Section -->
      <div
        class="bg-neon-green border-b-8 border-black p-8 dark:border-white print:border-b-4 print:bg-white print:p-6"
      >
        <div class="grid grid-cols-1 items-center gap-6 md:grid-cols-3 print:grid-cols-3">
          <!-- Profile Image -->
          <div class="flex justify-center md:justify-start">
            <div
              class="h-48 w-48 overflow-hidden rounded-full border-8 border-black shadow-[8px_8px_0px_0px_rgba(0,0,0,1)] print:h-32 print:w-32 print:border-4 print:shadow-none"
            >
              <img
                src={resumeData.personal.image}
                alt={resumeData.personal.name}
                class="h-full w-full scale-110 object-cover"
              />
            </div>
          </div>

          <!-- Name and Title -->
          <div class="text-center md:col-span-2 md:text-left">
            <h1 class="font-display mb-2 text-5xl font-black text-black print:text-3xl">
              {resumeData.personal.name}
            </h1>
            <p class="mb-4 font-mono text-lg text-black print:text-base">
              {resumeData.personal.title}
            </p>
            <p class="font-body mb-6 text-sm text-black/80 print:text-xs">
              {resumeData.personal.bio}
            </p>

            <!-- Contact Info -->
            <div class="flex flex-wrap justify-center gap-3 md:justify-start print:gap-2">
              {
                resumeData.personal.contact.map((contact) => {
                  const icons = {
                    Mail,
                    Linkedin,
                    Github,
                    MapPin,
                  };
                  const Icon = icons[contact.icon as keyof typeof icons];
                  return contact.href ? (
                    <a
                      href={contact.href}
                      target={contact.href.startsWith('http') ? '_blank' : undefined}
                      rel={contact.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                      class="text-neon-green inline-flex items-center gap-2 border-2 border-black bg-black px-3 py-1.5 font-mono text-xs font-bold transition-colors hover:bg-black/90 print:gap-1 print:border print:bg-white print:px-2 print:py-1 print:text-black"
                    >
                      <Icon className="w-4 h-4" />
                      {contact.value}
                    </a>
                  ) : (
                    <span class="inline-flex items-center gap-2 border-2 border-black bg-black px-3 py-1.5 font-mono text-xs font-bold text-white print:gap-1 print:border print:bg-white print:px-2 print:py-1 print:text-black">
                      <Icon className="w-4 h-4" />
                      {contact.value}
                    </span>
                  );
                })
              }
            </div>
          </div>
        </div>
      </div>

      <!-- Two Column Layout -->
      <div class="grid min-h-[600px] grid-cols-1 md:grid-cols-3 print:min-h-0 print:grid-cols-3">
        <!-- Left Column - Main Content -->
        <div
          class="border-r-8 border-black p-8 md:col-span-2 dark:border-white print:border-r-4 print:p-6"
        >
          <!-- Experience Section -->
          <div class="mb-8">
            <h2
              class="font-display bg-neon-green mb-6 inline-block border-4 border-black px-4 py-2 text-3xl font-black print:mb-4 print:border-t-0 print:border-r-0 print:border-b-4 print:border-l-0 print:bg-white print:px-0 print:text-2xl"
            >
              EXPERIENCE
            </h2>

            <div class="mt-6 space-y-6">
              {
                resumeData.experience.map((job, index) => (
                  <div class="relative border-l-4 border-black pl-8 dark:border-white">
                    <div class="bg-neon-green absolute top-1 -left-[9px] h-4 w-4 border-2 border-black dark:border-white" />

                    <div class="mb-2">
                      <span class="text-neon-green bg-black px-2 py-0.5 font-mono text-xs font-bold">
                        {job.period}
                      </span>
                    </div>

                    <h3 class="font-display mb-1 text-2xl font-bold">{job.title}</h3>
                    <p class="mb-1 font-mono text-sm">
                      {job.company} • {job.location} • {job.type}
                    </p>

                    <ul class="mt-3 space-y-2">
                      {job.highlights.map((highlight) => (
                        <li class="font-body flex items-start gap-2 text-sm">
                          <span class="text-neon-green font-bold">●</span>
                          <span>{highlight}</span>
                        </li>
                      ))}
                    </ul>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Education Section -->
          <div>
            <h2
              class="font-display bg-electric-blue mb-6 inline-block border-4 border-black px-4 py-2 text-3xl font-black print:mb-4 print:border-t-0 print:border-r-0 print:border-b-4 print:border-l-0 print:bg-white print:px-0 print:text-2xl"
            >
              EDUCATION
            </h2>

            <div class="mt-6 space-y-4">
              {
                resumeData.education.map((edu) => (
                  <div class="bg-electric-blue/10 border-4 border-black p-4 dark:border-white">
                    <span class="text-electric-blue bg-black px-2 py-0.5 font-mono text-xs font-bold">
                      {edu.period}
                    </span>
                    <h3 class="font-display mt-2 text-xl font-bold">{edu.degree}</h3>
                    <p class="mb-2 font-mono text-sm">{edu.institution}</p>
                    {edu.gpa && (
                      <p class="text-electric-blue mb-2 font-mono text-sm font-bold">{edu.gpa}</p>
                    )}
                    {edu.achievements && (
                      <ul class="mt-3 space-y-1">
                        {edu.achievements.map((achievement: string) => (
                          <li class="font-body flex items-start gap-2 text-xs">
                            <span class="text-electric-blue font-bold">▸</span>
                            <span>{achievement}</span>
                          </li>
                        ))}
                      </ul>
                    )}
                  </div>
                ))
              }

              {
                resumeData.certifications.map((cert) => (
                  <div class="bg-neon-green/10 border-4 border-black p-4 dark:border-white">
                    <span class="text-neon-green bg-black px-2 py-0.5 font-mono text-xs font-bold">
                      {cert.date}
                    </span>
                    <h3 class="font-display mt-2 text-xl font-bold">{cert.title}</h3>
                    <p class="mb-1 font-mono text-sm">{cert.issuer}</p>
                    {cert.description && (
                      <p class="font-body mt-2 text-xs text-gray-600 dark:text-gray-400">
                        {cert.description}
                      </p>
                    )}
                    {cert.credential && cert.credential !== 'In Progress' && (
                      <p class="mt-1 font-mono text-xs text-gray-600 dark:text-gray-400">
                        Credential ID: {cert.credential}
                      </p>
                    )}
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Right Column - Key Info & Skills -->
        <div class="bg-concrete p-8 dark:bg-zinc-800 print:bg-white print:p-6">
          <!-- Key Achievements -->
          <div class="mb-8">
            <h3
              class="font-display bg-neon-green mb-4 inline-block border-4 border-black px-3 py-1 text-2xl text-sm font-black print:border-t-0 print:border-r-0 print:border-b-4 print:border-l-0 print:bg-white"
            >
              KEY ACHIEVEMENTS
            </h3>
            <div class="mt-4 space-y-3">
              {
                resumeData.achievements.map((achievement, index) => {
                  const colors = ['neon-green', 'electric-blue', 'alert-red'];
                  const bgColor = colors[index % 3];
                  return (
                    <div
                      class={`border-4 border-black dark:border-white bg-${bgColor}/10 p-4 transition-all hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] dark:hover:shadow-[4px_4px_0px_0px_rgba(255,255,255,1)] print:border-2`}
                    >
                      <div class={`font-display mb-1 text-2xl font-black text-${bgColor}`}>
                        {achievement.value}
                      </div>
                      <div class="font-mono text-xs font-bold uppercase">{achievement.label}</div>
                    </div>
                  );
                })
              }
            </div>
          </div>

          <!-- Core Expertise -->
          <div class="mb-8">
            <h3
              class="font-display bg-electric-blue mb-4 inline-block border-4 border-black px-3 py-1 text-2xl text-sm font-black print:border-t-0 print:border-r-0 print:border-b-4 print:border-l-0 print:bg-white"
            >
              CORE EXPERTISE
            </h3>
            <div class="mt-4 space-y-4">
              {
                resumeData.expertise.map((area) => (
                  <div class="border-4 border-black bg-white p-4 dark:border-white dark:bg-black print:border-2">
                    <h4 class="text-electric-blue mb-2 font-mono text-sm font-bold">
                      {area.title}
                    </h4>
                    <div class="space-y-1">
                      {area.items.map((item) => (
                        <div class="flex items-start gap-2 font-mono text-xs">
                          <span class="text-electric-blue">▸</span>
                          <span>{item}</span>
                        </div>
                      ))}
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          <!-- Skills -->
          <div>
            <h3
              class="font-display bg-alert-red mb-4 inline-block border-4 border-black px-3 py-1 text-2xl text-sm font-black print:border-t-0 print:border-r-0 print:border-b-4 print:border-l-0 print:bg-white"
            >
              TECHNICAL SKILLS
            </h3>

            <div class="mt-4 space-y-4">
              <div>
                <h4 class="text-neon-green mb-2 font-mono text-xs font-bold">LANGUAGES</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.languages.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-black text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4 class="text-electric-blue mb-2 font-mono text-xs font-bold">INFRASTRUCTURE</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.infrastructure.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-white text-black dark:bg-black dark:text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4 class="text-alert-red mb-2 font-mono text-xs font-bold">DATA & AI</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.dataAI.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-white text-black dark:bg-black dark:text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4 class="mb-2 font-mono text-xs font-bold">FRAMEWORKS</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.frameworks.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-white text-black dark:bg-black dark:text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4 class="text-neon-green mb-2 font-mono text-xs font-bold">DEVOPS</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.devops.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-white text-black dark:bg-black dark:text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>

              <div>
                <h4 class="text-electric-blue mb-2 font-mono text-xs font-bold">ARCHITECTURE</h4>
                <div class="flex flex-wrap gap-2">
                  {
                    resumeData.skills.architecture.map((skill) => (
                      <Badge className="font-mono text-xs border-2 border-black bg-white text-black dark:bg-black dark:text-white">
                        {skill}
                      </Badge>
                    ))
                  }
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- SEO Keywords Section (Hidden visually, visible to ATS/Search engines) -->
      <div class="sr-only print:hidden" aria-hidden="true">
        <h2>Professional Keywords and Expertise</h2>
        <p>
          {resumeData.keywords.join(', ')}
        </p>
        <p>
          Experienced in building scalable cloud-native applications, AI-powered automation systems,
          microservices architecture, and leading distributed engineering teams. Proven track record
          in reducing operational costs, improving system performance, and delivering
          enterprise-grade solutions. Expert in full-stack development, DevOps practices, and agile
          methodologies.
        </p>
      </div>
    </div>
  </div>
</MainLayout>

<style>
  @media print {
    @page {
      margin: 0.25in;
      size: letter;
    }

    /* Force color printing */
    * {
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
      color-adjust: exact !important;
    }

    body {
      background: white !important;
      -webkit-print-color-adjust: exact;
      print-color-adjust: exact;
    }

    /* Hide elements that shouldn't print - already handled in global.css */

    /* Main container adjustments */
    .min-h-screen {
      min-height: auto !important;
      padding: 0 !important;
    }

    /* Ensure the resume container fits on page */
    .max-w-5xl {
      max-width: 100% !important;
      margin: 0 !important;
    }

    /* Preserve borders but make them print-friendly */
    .border-8 {
      border-width: 3px !important;
    }

    .border-4 {
      border-width: 2px !important;
    }

    /* Preserve background colors for print */
    .bg-neon-green {
      background-color: #00ff41 !important;
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    .bg-electric-blue {
      background-color: #00d9ff !important;
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    .bg-alert-red {
      background-color: #ff3333 !important;
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    .bg-concrete {
      background-color: #f0f0f0 !important;
    }

    /* Text colors for print */
    .text-neon-green {
      color: #00ff41 !important;
    }

    .text-electric-blue {
      color: #00d9ff !important;
    }

    .text-alert-red {
      color: #ff3333 !important;
    }

    /* Remove shadows for cleaner print */
    * {
      box-shadow: none !important;
      text-shadow: none !important;
    }

    /* Ensure proper page breaks */
    .grid {
      page-break-inside: avoid;
    }

    /* Prevent breaking inside sections */
    .space-y-6 > *,
    .space-y-4 > *,
    .space-y-2 > * {
      page-break-inside: avoid;
    }

    /* Allow page breaks between major sections */
    .mb-8 {
      page-break-after: auto;
    }

    /* Ensure images print */
    img {
      max-width: 100% !important;
      height: auto !important;
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }

    /* Links should show URLs in print */
    a[href^='http']:after {
      content: ' (' attr(href) ')';
      font-size: 0.75em;
      color: #666;
    }

    a[href^='mailto']:after {
      content: ' (' attr(href) ')';
      font-size: 0.75em;
      color: #666;
    }

    /* Ensure badges and buttons print correctly */
    .inline-flex,
    .flex {
      display: flex !important;
    }

    /* Dark mode adjustments for print - force light mode */
    .dark * {
      color: black !important;
      background-color: white !important;
      border-color: black !important;
    }

    /* Ensure all text is black for readability */
    .text-white,
    .dark\\:text-white {
      color: black !important;
    }

    .bg-black,
    .dark\\:bg-black {
      background-color: white !important;
    }

    .border-white,
    .dark\\:border-white {
      border-color: black !important;
    }
  }
</style>
