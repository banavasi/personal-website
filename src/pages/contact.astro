---
import MainLayout from "@/layouts/main.astro";
import { NeoButton } from "@/components/NeoButton";
import { NeoCard } from "@/components/NeoCard";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Mail, Linkedin, Github, MapPin, Send } from "lucide-react";

const content = {
  title: "Contact Shashank Shandilya | Available for Senior Technical Leadership Roles",
  description: "Get in touch for technical leadership opportunities, consulting, or collaboration. Based in Scottsdale, Arizona. Available for full-time roles, contract work, and technical consulting in cloud architecture, AI automation, and team leadership.",
};
---

<MainLayout content={content}>
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <!-- Left Column: Info -->
      <div>
        <h1 class="font-display font-bold text-6xl md:text-8xl mb-8 leading-none">
          LET'S <br />
          <span class="text-neon-green">CONNECT</span>
        </h1>
        <p class="font-mono text-xl mb-12 max-w-md">
          Interested in collaborating on a project or discussing complex architectural challenges? Drop me a line.
        </p>

        <div class="space-y-8">
          <NeoCard className="flex items-center gap-6" hoverEffect={true} accentColor="blue" client:load>
            <div class="bg-black text-white p-4 border-2 border-black">
              <Mail className="w-6 h-6" />
            </div>
            <div>
              <div class="font-mono text-xs font-bold text-gray-500 uppercase">Email</div>
              <a href="mailto:contact@shashankshandilya.me" class="font-display font-bold text-xl hover:text-electric-blue transition-colors">
                contact@shashankshandilya.me
              </a>
            </div>
          </NeoCard>

          <NeoCard className="flex items-center gap-6" hoverEffect={true} accentColor="green" client:load>
            <div class="bg-black text-white p-4 border-2 border-black">
              <Linkedin className="w-6 h-6" />
            </div>
            <div>
              <div class="font-mono text-xs font-bold text-gray-500 uppercase">LinkedIn</div>
              <a href="https://linkedin.com/in/shashankshandilya" target="_blank" rel="noopener noreferrer" class="font-display font-bold text-xl hover:text-neon-green transition-colors">
                in/shashankshandilya
              </a>
            </div>
          </NeoCard>

          <NeoCard className="flex items-center gap-6" hoverEffect={true} accentColor="none" client:load>
            <div class="bg-black text-white p-4 border-2 border-black">
              <Github className="w-6 h-6" />
            </div>
            <div>
              <div class="font-mono text-xs font-bold text-gray-500 uppercase">GitHub</div>
              <a href="https://github.com/banavasi" target="_blank" rel="noopener noreferrer" class="font-display font-bold text-xl hover:text-gray-600 transition-colors">
                github.com/banavasi
              </a>
            </div>
          </NeoCard>

          <div class="flex items-center gap-4 mt-12 font-mono">
            <MapPin className="w-5 h-5 text-neon-green" />
            <span>Based in Scottsdale, Arizona, US</span>
          </div>
        </div>
      </div>

      <!-- Right Column: Form -->
      <div class="lg:pt-20">
        <NeoCard className="bg-white dark:bg-black p-8 md:p-12 border-8" accentColor="green" client:load>
          <h2 class="font-display font-bold text-3xl mb-8">SEND A MESSAGE</h2>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label class="font-mono font-bold text-sm uppercase">Name</label>
                <Input 
                  placeholder="JOHN DOE" 
                  className="rounded-none border-4 border-black h-14 font-mono focus-visible:ring-0 focus-visible:border-neon-green bg-gray-50"
                  client:load
                />
              </div>
              <div class="space-y-2">
                <label class="font-mono font-bold text-sm uppercase">Email</label>
                <Input 
                  placeholder="JOHN@EXAMPLE.COM" 
                  type="email"
                  className="rounded-none border-4 border-black h-14 font-mono focus-visible:ring-0 focus-visible:border-neon-green bg-gray-50"
                  client:load
                />
              </div>
            </div>

            <div class="space-y-2">
              <label class="font-mono font-bold text-sm uppercase">Subject</label>
              <Input 
                placeholder="PROJECT INQUIRY" 
                className="rounded-none border-4 border-black h-14 font-mono focus-visible:ring-0 focus-visible:border-neon-green bg-gray-50"
                client:load
              />
            </div>

            <div class="space-y-2">
              <label class="font-mono font-bold text-sm uppercase">Message</label>
              <Textarea 
                placeholder="TELL ME ABOUT YOUR PROJECT..." 
                className="rounded-none border-4 border-black min-h-[200px] font-mono focus-visible:ring-0 focus-visible:border-neon-green bg-gray-50 resize-none p-4"
                client:load
              />
            </div>

            <NeoButton className="w-full text-lg h-16 mt-4 group" client:load>
              SEND MESSAGE <Send className="ml-2 w-5 h-5 group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform" />
            </NeoButton>
          </form>
        </NeoCard>
      </div>
    </div>
  </div>
</MainLayout>
