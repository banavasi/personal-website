---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Projects | ${SITE_TITLE}`} description="A showcase of my projects and work" />
		<style>
			main {
				max-width: 1200px;
			}
			
			.page-header {
				padding: 4rem 0 3rem 0;
			}
			
			.page-title {
				font-size: 3.5rem;
				font-weight: 800;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}
			
			.page-subtitle {
				font-size: 1.5rem;
				color: var(--text-tertiary);
				margin-bottom: 2rem;
			}
			
			.projects-grid {
				display: grid;
				grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
				gap: 2rem;
				margin-bottom: 4rem;
			}
			
			.project-card {
				padding: 2rem;
				background: var(--bg-secondary);
				border: 1px solid var(--border-color);
				border-radius: 16px;
				transition: all 0.3s ease;
			}
			
			.project-card:hover {
				border-color: var(--accent);
				transform: translateY(-8px);
				box-shadow: var(--box-shadow-lg);
			}
			
			.project-title {
				font-size: 1.5rem;
				color: var(--text-primary);
				margin-bottom: 1rem;
			}
			
			.project-description {
				color: var(--text-secondary);
				margin-bottom: 1.5rem;
				line-height: 1.6;
			}
			
			.project-link {
				color: var(--accent);
				text-decoration: none;
				font-weight: 600;
				transition: color 0.2s ease;
			}
			
			.project-link:hover {
				color: var(--accent-light);
			}
			
			.nav-links {
				display: flex;
				justify-content: space-between;
				padding: 2rem 0;
				border-top: 1px solid var(--border-color);
			}
			
			.nav-link {
				display: flex;
				align-items: center;
				gap: 0.5rem;
				color: var(--text-secondary);
				text-decoration: none;
				transition: color 0.2s ease;
			}
			
			.nav-link:hover {
				color: var(--accent);
			}
			
			@media (max-width: 768px) {
				.page-title {
					font-size: 2.5rem;
				}
				
				.projects-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="page-header">
				<h1 class="page-title">Projects</h1>
				<p class="page-subtitle">A lot of ideas, but some are still under construction!</p>
			</section>

			<div class="projects-grid">
				<!-- Projects will be added here -->
				<div class="project-card">
					<h3 class="project-title">Coming Soon</h3>
					<p class="project-description">
						Project details will be added soon. Stay tuned for updates!
					</p>
					<a href="#" class="project-link">Learn More...</a>
				</div>
			</div>

			<div class="nav-links">
				<a href="/about" class="nav-link">
					<span>←</span>
					<span>About</span>
				</a>
				<a href="/skills" class="nav-link">
					<span>Skills & Tools</span>
					<span>→</span>
				</a>
			</div>
		</main>
		<Footer />
	</body>
</html>
