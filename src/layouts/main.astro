---
import '../styles/global.css';
import { Header } from '@/components/Header';
import Footer from '@/components/Footer.astro';

const { content } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const pageTitle = content.title || "Shashank Shandilya - Senior Technical Lead";
const pageDescription = content.description || "Senior Technical Lead & Full-Stack Developer specializing in cloud infrastructure, AI/ML, and modern web technologies. 8+ years of experience at OneOrigin.";
const ogImage = content.ogImage || "/images/shashankshandilya.png";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<!-- Theme Initialization Script (prevents flash) -->
		<script is:inline>
			const getThemePreference = () => {
				if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
					return localStorage.getItem('theme');
				}
				return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
			};
			const isDark = getThemePreference() === 'dark';
			document.documentElement.classList[isDark ? 'add' : 'remove']('dark');
		</script>
		
		<!-- Favicons -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" type="image/png" sizes="32x32" href="/logo.svg" />
		<link rel="apple-touch-icon" sizes="180x180" href="/logo.svg" />
		<link rel="manifest" href="/site.webmanifest" />
		
		<!-- Primary Meta Tags -->
		<title>{pageTitle}</title>
		<meta name="title" content={pageTitle} />
		<meta name="description" content={pageDescription} />
		<meta name="author" content="Shashank Shandilya" />
		<meta name="keywords" content="Full-Stack Developer, Cloud Infrastructure, AI/ML, TypeScript, React, Node.js, AWS, Docker, Kubernetes, Senior Technical Lead" />
		<link rel="canonical" href={canonicalURL} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:title" content={pageTitle} />
		<meta property="og:description" content={pageDescription} />
		<meta property="og:image" content={new URL(ogImage, Astro.site)} />
		<meta property="og:site_name" content="Shashank Shandilya Portfolio" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={canonicalURL} />
		<meta property="twitter:title" content={pageTitle} />
		<meta property="twitter:description" content={pageDescription} />
		<meta property="twitter:image" content={new URL(ogImage, Astro.site)} />
		
		<!-- Theme Color -->
		<meta name="theme-color" content="#00ff41" media="(prefers-color-scheme: dark)" />
		<meta name="theme-color" content="#f0f0f0" media="(prefers-color-scheme: light)" />
	</head>
	<body class="min-h-screen bg-background text-foreground font-body selection:bg-neon-green selection:text-black">
		<!-- Header with mobile menu -->
		<Header client:load />
		
		<!-- Main Content -->
		<main class="pt-20 min-h-[calc(100vh-80px)]">
			<slot />
		</main>
		
		<!-- Footer -->
		<Footer />
	</body>
</html>
