---
import { layoutContent } from '@/content/layout';
import { Github, Linkedin, Mail } from 'lucide-react';

const { footer } = layoutContent;

// Icon component mapping
const iconComponents = {
  Github,
  Linkedin,
  Mail,
};
---

<footer class="border-t-4 border-black bg-black py-12 text-white dark:border-white">
  <div class="container mx-auto">
    <div class="flex flex-col items-start justify-between gap-8 md:flex-row md:items-center">
      <!-- Brand & Tagline -->
      <div class="flex items-center gap-4">
        <img src="/logo-white.svg" alt="Shashank Shandilya Logo" class="h-12 w-12 object-contain" />
        <div>
          <h2 class="font-display mb-2 text-3xl font-bold">{footer.name}</h2>
          <p class="font-mono text-gray-400">{footer.tagline}</p>
        </div>
      </div>

      <!-- Social Links -->
      <div class="flex gap-4">
        {
          footer.socialLinks.map((social) => {
            const IconComponent = iconComponents[social.icon as keyof typeof iconComponents];
            return (
              <a
                href={social.href}
                target={social.href.startsWith('http') ? '_blank' : undefined}
                rel={social.href.startsWith('http') ? 'noopener noreferrer' : undefined}
                class="hover:text-neon-green transition-colors"
                aria-label={social.label}
              >
                <IconComponent className="h-6 w-6" />
              </a>
            );
          })
        }
      </div>
    </div>

    <!-- Footer Bottom -->
    <div
      class="mt-12 flex flex-col justify-between gap-4 border-t border-gray-800 pt-8 font-mono text-sm text-gray-500 md:flex-row"
    >
      <p>Â© {footer.copyright.year} {footer.copyright.name}. {footer.copyright.rights}</p>
      <p>
        {footer.designNote}
        <span class="text-neon-green">{footer.designStyle}</span>
      </p>
    </div>
  </div>
</footer>
