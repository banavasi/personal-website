---
import { homeContent } from '@/content/home';

interface Props {
  text?: string;
}

const { text } = Astro.props;

// Use props or fallback to static content
const marqueeText = text || homeContent.marquee.text;
---

<div
  class="bg-neon-green overflow-hidden border-b-4 border-black py-4 whitespace-nowrap dark:border-white"
>
  <div class="animate-marquee inline-block font-mono text-xl font-bold">
    {marqueeText}
    {marqueeText}
  </div>
</div>
